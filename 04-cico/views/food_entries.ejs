<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  </head>
  <body>
   <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Calories</th>
                <th>Meal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% for (let foodEntry of foodEntries) { %>
            <tr>
                <td><%= foodEntry.foodName %></td>
                <td><%= foodEntry.calories %></td>
                <td><%= foodEntry.meal %></td>
                <td>
                    <a href="/food-entries/edit/<%= foodEntry.id %>" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/food-entries/delete/<%= foodEntry.id %>" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</html>