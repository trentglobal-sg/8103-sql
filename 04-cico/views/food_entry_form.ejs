<div>
    <label>Date</label>
    <input type="datetime-local" name="dateTime" value="<%= foodEntry?.dateTime?.toISOString()?.slice(0, -1) %>" />
</div>
<div>
    <label>Food Name</label>
    <input type="text" name="foodName" value="<%= foodEntry?.foodName %>" />
</div>
<div>
    <label>Calories</label>
    <input type="number" name="calories" value="<%= foodEntry?.calories %>" />
</div>
<div>
    <label>Meal:</label>
    <% for (let m of meals) { %>
        <input type="radio" name="meal" value="<%= m.id %>" <%=foodEntry?.meal_id==m.id? "checked" : "" %>
        />
        <label>
            <%= m.name %>
        </label>
        <% } %>



</div>
<div>
    <label>Tags</label>
    <% for (let t of tags) { %>
        <input type="checkbox" 
               name="tags[]" 
               value="<%= t.id %>" <%=relatedTags.includes(t.id)
        ? "checked" : "" %>
        />
        <label><%= t.name %></label>
   <% } %>



</div>
<div>
    <input type="number" name="servingSize" value="<%= foodEntry?.servingSize %>" />
    <label>Unit</label>
    <select name="unit">
        <option value="serving" <%=foodEntry?.unit=="serving" ? "selected" : "" %>
            >Serving</option>
        <option value="gram" <%=foodEntry?.unit=="gram" ? "selected" : "" %>
            >Gram</option>
        <option value="ounce" <%=foodEntry?.unit=="ounce" ? "selected" : "" %>
            >Ounce</option>
        <option value="pound" <%=foodEntry?.unit=="pound" ? "selected" : "" %>
            >Pound</option>
    </select>
</div>